<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <title>Deteksi Link Berbahaya</title>

    <!-- GABUNGKAN KE CSS LEWAT LINK -->
    <link rel="stylesheet" href="style.css">
</head>
<body>

<div class="container">
    <h1>Deteksi Link Berbahaya</h1>

    <input type="text" id="linkInput" placeholder="Masukkan link">

    <button onclick="cekLink()">Cek Link</button>

    <div id="hasil" class="hasil"></div>

    <div class="info">
        * Deteksi ini hanya untuk edukasi
    </div>
</div>

<script>
function cekLink() {
    const link = document.getElementById("linkInput").value.toLowerCase();
    const hasil = document.getElementById("hasil");

    const kataBerbahaya = [
        "free","login","verify","update",
        "secure","account","bank",
        "paypal","click","bonus"
    ];

    if (link === "") {
        alert("Masukkan link terlebih dahulu!");
        return;
    }

    if (link.startsWith("http://")) {
        hasil.className = "hasil waspada";
        hasil.innerHTML = "⚠️ LINK MENCURIGAKAN (HTTP)";
        hasil.style.display = "block";
        return;
    }

    for (let kata of kataBerbahaya) {
        if (link.includes(kata)) {
            hasil.className = "hasil bahaya";
            hasil.innerHTML = "❌ LINK BERBAHAYA";
            hasil.style.display = "block";
            return;
        }
    }

    hasil.className = "hasil aman";
    hasil.innerHTML = "✅ LINK TERLIHAT AMAN";
    hasil.style.display = "block";
}
</script>

</body>
</html>
